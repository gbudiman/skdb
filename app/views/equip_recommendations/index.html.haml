%div{class: 'col-xs-12'}
	%table{id: 'rec-table'}
		%thead
			%tr
				%th{'data-field' => 'element', 'data-formatter' => 'format_hero_element', 'data-sortable' => 'true'} E
				%th{'data-field' => 'name', 'data-sortable' => 'true', 'data-formatter' => 'format_compact_name_with_dynamic_buttons'} Name
				%th{'data-field' => 'weapon', 'data-sortable' => 'true'} Weapon
				%th{'data-field' => 'armor', 'data-sortable' => 'true'} Armor
				- @jewel_columns.each do |j|
					%th{'data-field' => j, 'data-formatter' => 'jewel_formatter', 'data-sortable' => 'true', 'data-sort-name' => j }= j
		%tbody

= javascript_include_tag 'stat_table'
:javascript
	$('#rec-table').bootstrapTable({
		url: '/equip_recommendations/fetch'
	})

	function jewel_formatter(value, row, index) {
		if (value == true) {
			return '<span class="glyphicon glyphicon-ok"></span>';
		} else {
		  return '-';
		}
	}